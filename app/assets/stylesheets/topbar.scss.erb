@import  "<%= Rails.root %>/app/assets/stylesheets/topbar.scss";
@import "colors";

.navbar {
  .active > a, .open > a {
    @include linear-gradient($hover_gradient_start, $hover_gradient_end);
  }
}

.navbar-brand {
  height: inherit;
}

.navbar .nav .org-switcher > a {
  font-size: 14px;
  border-right: solid 1px $border_color;

  .caret {
    margin-left: 20px;
  }
}

.navbar-default .navbar-nav > .active > a,
.navbar-default .navbar-nav > .active > a:hover,
.navbar-default .navbar-nav > .active > a:focus {
  color: $navbar-default-link-active-color;
}
.navbar-default .navbar-nav > li > a:hover,
.navbar-default .navbar-nav > .open > a:hover,
.navbar-default .navbar-nav > li > a:focus,
.navbar-default .navbar-nav > .open > a:focus{
  color: $navbar-default-link-hover-color
}
.navbar-default .navbar-nav > li > a,
.navbar-default .navbar-nav > .open > a {
  color: $navbar-default-link-color;
}

.navbar-outer {
  background-color: $primary_color;
  border-color: darken($primary_color, 5%);
  border-top: 3px solid #cc0000;
  white-space: nowrap;
}

.navbar-brand img {
  height: 10px;
  width: 141px;
  margin-bottom: 1px;
}

.navbar-inner {
  border-bottom: none;
  border-top: 1px solid $border_color;
  clear: left;
  left: 0;
  min-height: 40px;
  max-height: 40px;
  position: absolute;
  right: 0;
  top: 25px;

  @include linear-gradient($primary_gradient_start, $primary_gradient_end);

  .menu_tab_dropdown > a {
    padding-top: 10px;
    padding-bottom: 9px;
  }
}


.navbar-inner {
  a.manage-menu {
    font-size: 11px;
    color: #0088cc;

    &:hover,
    &:focus {
      color: #ffffff;
    }
  }

  .glyphicon {
    color: #cccccc;
  }
}